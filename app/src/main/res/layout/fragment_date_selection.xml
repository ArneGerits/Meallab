<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DateSelectionFragment"
    android:background="@color/colorPrimary"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/daysBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="25dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:id="@+id/first"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/second"
            android:fontFamily="@font/greycliff_cf_heavy"
            android:gravity="center"
            android:text="M"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/second"
            android:layout_width="44dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/greycliff_cf_heavy"
            app:layout_constraintStart_toEndOf="@id/first"
            app:layout_constraintEnd_toStartOf="@id/third"
            android:gravity="center"
            android:text="T"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/third"
            android:layout_width="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/second"
            app:layout_constraintEnd_toStartOf="@id/fourth"
            android:layout_height="match_parent"
            android:fontFamily="@font/greycliff_cf_heavy"
            android:gravity="center"
            android:text="W"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fourth"
            android:layout_width="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/third"
            app:layout_constraintEnd_toStartOf="@id/fifth"
            android:layout_height="match_parent"
            android:fontFamily="@font/greycliff_cf_heavy"
            android:gravity="center"
            android:text="T"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fifth"
            android:layout_width="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/fourth"
            app:layout_constraintEnd_toStartOf="@id/sixth"
            android:layout_height="match_parent"
            android:fontFamily="@font/greycliff_cf_heavy"
            android:gravity="center"
            android:text="F"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sixth"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/fifth"
            app:layout_constraintEnd_toStartOf="@id/seventh"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/greycliff_cf_heavy"
            android:gravity="center"
            android:text="S"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/seventh"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/sixth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/greycliff_cf_heavy"
            android:gravity="center"
            android:text="S"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysBar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView3"
        app:layout_constraintStart_toEndOf="@id/textView1"
        app:layout_constraintTop_toBottomOf="@id/daysBar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView4"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@id/daysBar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView5"
        app:layout_constraintStart_toEndOf="@id/textView3"
        app:layout_constraintTop_toBottomOf="@id/daysBar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView6"
        app:layout_constraintStart_toEndOf="@id/textView4"
        app:layout_constraintTop_toBottomOf="@id/daysBar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="#00ffffff"
        android:fontFamily="@font/imprima"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView7"
        app:layout_constraintStart_toEndOf="@id/textView5"
        app:layout_constraintTop_toBottomOf="@id/daysBar" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:fontFamily="@font/imprima"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView6"
        app:layout_constraintTop_toBottomOf="@id/daysBar"
        android:background="#00ffffff" />
    
</androidx.constraintlayout.widget.ConstraintLayout>